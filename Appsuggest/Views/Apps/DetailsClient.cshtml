@model Appsuggest.Models.App

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detaylar";
}

<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@(Model.LogoLink??"https://dummyimage.com/600x700/dee2e6/6c757d.jpg")" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.Provider.Name</div>
                <h1 class="display-5 fw-bolder">@Model.Name</h1>
                <div class="fs-5 mb-5">
                    <span>@Model.Version</span>
                    <span>for @Model.AppPlatform.Name platform</span>
                </div>
                <p class="lead">@Model.Description</p>
                <div class="d-flex">
                    <a class="btn btn-outline-primary flex-shrink-0" href="@Model.Link">
                        Indir
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Diğer Uygulamalar</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var app in Model.RelatedApps)
            {
            <div class="col mb-5 " >
                <div class="card h-100 clickable" onclick="location.href='@Url.Action("DetailsClient", "Apps", new {id=app.Id})'" >
                    <!-- Product image-->
                    <img class="card-img-top" src="@(app.LogoLink??"https://dummyimage.com/450x300/dee2e6/6c757d.jpg")" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@app.Name</h5>
                            <!-- Product price-->
                            @*$40.00 - $80.00*@
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-primary mt-auto" href="@app.Link">Indir</a></div>
                    </div>
                </div>
            </div>

            }
        </div>
    </div>
</section>
